@model LojaDeCarros.Models.ViewModels.ClienteFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente.Name" class="control-label"></label>
                <input asp-for="Cliente.Name" class="form-control" />
                <span asp-validation-for="Cliente.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.BirthDate" class="control-label"></label>
                <input asp-for="Cliente.BirthDate" class="form-control" />
                <span asp-validation-for="Cliente.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Email" class="control-label"></label>
                <input asp-for="Cliente.Email" class="form-control" />
                <span asp-validation-for="Cliente.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Telefone" class="control-label"></label>
                <input asp-for="Cliente.Telefone" class="form-control" />
                <span asp-validation-for="Cliente.Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Endereco" class="control-label"></label>
                <input asp-for="Cliente.Endereco" class="form-control" />
                <span asp-validation-for="Cliente.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CPF" class="control-label"></label>
                <input asp-for="Cliente.CPF" class="form-control" />
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CarroId" class="control-label"></label>
                <select asp-for="Cliente.CarroId" class="form-control" 
                asp-items="@(new SelectList(Model.Carros, "Id", "Modelo"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
